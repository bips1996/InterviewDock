# Production Environment Variables
# IMPORTANT: Update these values for production deployment

NODE_ENV=production
PORT=5001

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_DATABASE=interviewdock

# Set to 'true' only for initial setup to create tables
# IMPORTANT: Set to 'false' after initial deployment for safety
DB_SYNCHRONIZE=true
DB_LOGGING=false

# CORS Configuration
CORS_ORIGIN=*

# Server Configuration
MAX_PAGE_SIZE=100
DEFAULT_PAGE_SIZE=20
